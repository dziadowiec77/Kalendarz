@model Kalendarz.Models.Kal

@{
    ViewData["Title"] = "Edit";
}

<h1>Edytuj wydarzenie</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ID" />
            <div class="form-group">
                <label asp-for="Nazwa" class="control-label"></label>
                <input asp-for="Nazwa" class="form-control" />
                <span asp-validation-for="Nazwa" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Opis" class="control-label"></label>
                <input asp-for="Opis" class="form-control" />
                <span asp-validation-for="Opis" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="StartDate" class="control-label"></label>
                <input asp-for="StartDate" class="form-control" />
                <span asp-validation-for="StartDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EndDate" class="control-label"></label>
                <input asp-for="EndDate" class="form-control" />
                <span asp-validation-for="EndDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TypWydarzeniaId" class="control-label"></label>
                <select asp-for="TypWydarzeniaId" class="form-control" asp-items="ViewBag.TypWydarzeniaId"></select>
                <span asp-validation-for="TypWydarzeniaId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Powtarzalnosc" class="control-label"></label>
                <input asp-for="Powtarzalnosc" class="form-check-input" type="checkbox" />
                <span asp-validation-for="Powtarzalnosc" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label for="CoIle">Częstotliwość powtarzania</label>
                <select id="CoIle" name="CoIle" class="form-control">
                    <option value="">Brak</option>
                    <option value="Daily">Codziennie</option>
                    <option value="Weekly">Co tydzień</option>
                    <option value="Monthly">Co miesiąc</option>
                    <option value="Yearly">Co rok</option>
                </select>
            </div>
            <div class="form-group">
                <label asp-for="Powiadomienie" class="control-label"></label>
                <input asp-for="Powiadomienie" class="form-check-input" type="checkbox" />
                <span asp-validation-for="Powiadomienie" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Udostepnij" class="control-label"></label>
                <input asp-for="Udostepnij" class="form-check-input" type="checkbox" />
                <span asp-validation-for="Udostepnij" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Wróć do kalendarza</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
